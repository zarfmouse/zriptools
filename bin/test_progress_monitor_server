#!/usr/bin/php
<?php

require_once __DIR__."/../lib/autoload-init.php";

use \ZCore\ProgressMonitor;

ProgressMonitor::init('foo');
ProgressMonitor::init('bar');
for($i=1;$i<=100;$i++) {
  ProgressMonitor::update('foo', $i, "$i% done");
  ProgressMonitor::update('bar', $i/2, "blah");
  usleep(200000);
}